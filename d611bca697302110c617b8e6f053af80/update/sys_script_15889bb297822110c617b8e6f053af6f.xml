	var riskCount = 0;
	var grRisks = new GlideAggregate('x_935283_pia_risk_rtp');
	grRisks.addQuery('rtp', current.rtp);
	grRisks.addAggregate('COUNT');
	grRisks.query();
	if(grRisks.next())
		riskCount = parseInt(grRisks.getAggregate('COUNT')); 
	
	riskCount = riskCount + 1;	
	current.risk_number = current.rtp.project.project_control_number + '-R' + leftPad(riskCount,3);

})(current, previous);

function leftPad(number, length) {
        var str = '' + number;
        while (str.length < length) { str = '0' + str; }
        return str;
}]]></script>
